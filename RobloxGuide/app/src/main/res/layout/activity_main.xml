<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal" >

    <TextView
        android:text="Tryck på ett av blocken för att se hur man använder det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionTextView"
        android:layout_centerHorizontal="true"
        android:textSize="55sp"
        android:layout_margin="50dp"
        android:textColor="#000"
        android:textAlignment="center"/>

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_below="@+id/descriptionTextView"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/mainButton"
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/main_icon"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/forward_icon"
            android:id="@+id/forwardButton"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/funktion_icon"
            android:id="@+id/funktionButton"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/anropafunktion_icon"
            android:id="@+id/anropaFunktionButton"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/loop_icon"
            android:id="@+id/loopButton"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/if_icon"
            android:id="@+id/ifButton"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/tilldelavarde_icon"
            android:id="@+id/tilldelaVardeButton"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/anvandvarde_icon"
            android:id="@+id/anvandVardeButton"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/two_icon"
            android:id="@+id/twoButton"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/multiplicera_icon"
            android:id="@+id/mathButton"
            android:background="@android:color/background_light" />

        <ImageButton
            android:layout_width="223px"
            android:layout_height="223px"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/mellanrum_icon"
            android:id="@+id/mellanrumButton"
            android:background="@android:color/background_light" />

    </GridLayout>


</RelativeLayout>
